<section class='post-container'>
  <%= render partial: 'shared/user/user', locals: {user: @user} %>
  <% @posts.each do |post| %>
    <%= render partial: 'shared/post/post', locals: {post: post} %>
    <div class='comments_container user-post'>
      <%= render partial: 'shared/comment/comment_last', locals: {post: post} %>
    </div>
  <% end %>
  <div class='btn-container'>
    <%= link_to "Pagination", new_user_post_path(user_id: @user.id) , class: "posts-btn" %>
  </div>
</section>
